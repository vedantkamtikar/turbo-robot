#include <Wire.h> 
#include <LiquidCrystal_I2C.h> 
#include <DHT.h> 
#define DHTTYPE DHT11 
DHT dht(2, DHTTYPE); 
LiquidCrystal_I2C lcd(0x27, 16, 2); 
void setup() 
{ 
lcd.init(); 
lcd.backlight(); 
dht.begin(); 
lcd.setCursor(0, 0); 
lcd.print("Weather Station"); 
lcd.setCursor(0, 1); 
lcd.print(" temp and humidity "); 
delay(2000); 
lcd.clear(); 
}

void loop() 
{ 
delay(2000); 
float temperature = dht.readTemperature(); 
float humidity = dht.readHumidity(); 

lcd.setCursor(0, 0); 
lcd.print("Temp: "); 
lcd.print(temperature); 
lcd.print("C");
 
lcd.setCursor(0, 1); 
lcd.print("Humidity: "); 
lcd.print(humidity); 
lcd.print("%"); 
delay(1000); // Update every 1 second lcd.clear(); 
}
